{
	"name": "Owlbear Rodeo Tracker",
	"description": "Add-on for Owlbear Rodeo tabletop map simulator. Track dice rolls, combat turns, health and conditions of characters on the map.",
	"version": "1.0.3",
	"author": "Redweller (redweller@gmail.com)",
	"manifest_version": 2,

	"permissions": ["activeTab","tabs","storage"],

	"icons": {
		"16": "/images/combat16.png",
		"32": "/images/combat32.png",
		"48": "/images/combat48.png",
		"128": "/images/combat128.png"
	},
	
	"browser_action": {
		"default_popup": "/action/markup.html",
		"default_icon": {
			"16": "/images/combat16.png",
			"32": "/images/combat32.png",
			"48": "/images/combat48.png",
			"128": "/images/combat128.png"
		}
	},
	
	"background": {
		"scripts" : [
			"/action/storage.js", 
			"background.js"
		]
	},
	
	"content_scripts": [
		{
			"matches": [ "https://*.owlbear.rodeo/*" ],
			"run_at": "document_end",
			"js": [ "contentscript.js" ]
		}
	],
	  
	"web_accessible_resources": [
		"/injected/*.js",
		"/injected/*.css",
		"/audio/*.mp3"
	]
}
